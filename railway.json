{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT app:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthCheckTimeout": 300,
    "healthCheckInterval": 30
  },
  "environment": {
    "FLASK_ENV": "production",
    "PYTHONUNBUFFERED": "1"
  }
}